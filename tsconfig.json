{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "./dist",
		"strict": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"@helpers/*": [ "./helpers/*" ],
			"@helpers": [ "./helpers/index.ts" ],
			"@time": [ "./chapters/time/index.ts" ],
			"@coordinates": [ "./chapters/coordinate-systems/index.ts" ],
			"@/*": [ "./*" ]
		}
	},
	"include": [ "./src/**/*" ],
}
